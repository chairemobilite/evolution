{
  "engines": {
    "node": ">=22.0.0"
  },
  "name": "evolution-frontend",
  "version": "0.5.0",
  "description": "Transportation and travel survey analysis and simulation platform",
  "repository": "github.com/chairemobilite/evolution",
  "license": "MIT",
  "scripts": {
    "build:dev": "webpack --watch --progress --colors --env development --mode development",
    "build:prod": "webpack -p --progress --colors --env production --mode production",
    "build:test": "cross-env NODE_ENV=test webpack -p --env test --mode development --watch --progress --colors",
    "clean": "rimraf lib/",
    "cleanModules": "rimraf node_modules/",
    "compile": "tsc && yarn copy-files",
    "compile:dev": "yarn copy-files && tsc -w",
    "copy-files": "copyfiles -u 1 ./src/assets/images/**/* src/styles/survey/*.scss ./lib/",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:unit": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:sequential": "echo 'cross-env NODE_ENV=test jest --config=jest.sequential.config.js --runInBand'",
    "test:ui": "echo 'cross-env NODE_ENV=test jest --config=jest.ui.config.js'",
    "lint": "eslint .",
    "format": "prettier-eslint ./src/**/*.{ts,tsx} --write",
    "format:all": "yarn format"
  },
  "dependencies": {
    "@deck.gl/core": "9.0.29",
    "@deck.gl/extensions": "9.0.29",
    "@deck.gl/geo-layers": "9.0.29",
    "@deck.gl/layers": "9.0.29",
    "@deck.gl/mesh-layers": "9.0.29",
    "@deck.gl/react": "9.0.29",
    "@fortawesome/fontawesome-svg-core": "^6.7.1",
    "@fortawesome/free-solid-svg-icons": "^6.7.1",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@react-google-maps/api": "^2.20.6",
    "@turf/turf": "^7.1.0",
    "@zeit/fetch-retry": "^5.0.1",
    "bowser": "^2.11.0",
    "chaire-lib-common": "^0.2.2",
    "chaire-lib-frontend": "^0.2.2",
    "date-fns": "^2.29.1",
    "dompurify": "^3.2.4",
    "evolution-common": "^0.5.0",
    "geojson": "^0.5.0",
    "geojson-validation": "^1.0.2",
    "highcharts": "^12.1.2",
    "highcharts-react-official": "^3.2.1",
    "i18next": "^24.0.5",
    "i18next-browser-languagedetector": "^8.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-fetch": "^2.6.7",
    "popmotion": "^11.0.5",
    "react": "^19.0.0",
    "react-datepicker": "^7.6.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^12.3.1",
    "react-input-range": "^1.3.0",
    "react-loadable": "^5.5.0",
    "react-markdown": "^9.0.1",
    "react-modal": "^3.16.1",
    "react-redux": "^9.2.0",
    "react-router": "^7.0.2",
    "react-select": "^5.8.3",
    "react-spinners": "^0.14.1",
    "react-table": "^7.8.0",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "remark-gfm": "^4.0.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/geojson": "^7946.0.15",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.5",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.1",
    "@types/react-dom": "^19.0.2",
    "@types/react-select": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "8.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-react": "^7.37.2",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-each": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mockdate": "^3.0.5",
    "prettier-eslint-cli": "^8.0.1",
    "ts-jest": "^29.2.5"
  }
}
