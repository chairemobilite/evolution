{
  "engines": {
    "node": ">=24.0.0"
  },
  "name": "evolution-common",
  "version": "0.5.0",
  "description": "Common type library for evolution",
  "repository": "github.com/chairemobilite/evolution",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib/",
    "cleanModules": "rimraf node_modules/",
    "compile": "tsc",
    "compile:dev": "tsc -w",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:unit": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:sequential": "echo 'no tests to run for this workspace'",
    "test:ui": "echo 'no tests to run for this workspace'",
    "lint": "eslint .",
    "format": "prettier-eslint \"./src/**/*.{ts,tsx}\" --write",
    "format:all": "yarn format",
    "jsdoc": "jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.1",
    "@turf/turf": "^7.1.0",
    "chaire-lib-common": "^0.2.2",
    "geojson-validation": "^1.0.2",
    "i18next": "^24.0.5",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/geojson": "^7946.0.16",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.15.14",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^8.57.1",
    "eslint-plugin-n": "^15.7.0",
    "jest-each": "^30.2.0",
    "prettier-eslint-cli": "^8.0.1",
    "typescript": "^5.8.3"
  }
}
